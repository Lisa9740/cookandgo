    <body class="bg-orange">
            <% include ../partials/header-login.ejs %>
        
            <div class="container-fluid mt-2 p-md-5">
                <div class="container bg-light border-top-red p-md-5 ">

                    <div class="container-fluid p-md-5 ">
                        <a href="/" class="btn btn-outline-danger mt-2">
                            <i class="fas fa-reply mr-3"></i>Retour</a>
                        <h1 class="text-center">Bienvenue !</h1>
                        <section class="container">
                            <div class="row">
                                <!--*****************************************-->

                                <!-- SECTION LOGIN CUISINIER -->

                                <!--*****************************************-->
                                <div class="col-md-6 p-5">
                                    <div class="row ">

                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h3 class="panel-title  font-weight-bold">Connectez-vous
                                                    <small> à votre profil en tant que cuisinier </small>
                                                </h3>
                                            </div>
                                            <div class="panel-body">
                                                <form role="form" action="/cuisiniers/login" method="POST" class="needs-validation" novalidate>
